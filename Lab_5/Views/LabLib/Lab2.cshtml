@model Lab_5.Models.Lab2ViewModel

@{
	ViewData["Title"] = "Lab 2";
}

<div class="container">
	<h3>Lab 2</h3>
	<form method="post" asp-action="Lab2">
		<div class="form-group mb-3">
			<label asp-for="N" class="form-label"></label>
			<input asp-for="N" class="form-control" />			
		</div>

        <button type="submit" class="btn btn-primary">Submit</button>
