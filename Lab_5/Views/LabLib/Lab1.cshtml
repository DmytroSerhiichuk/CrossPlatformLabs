@model Lab_5.Models.Lab1ViewModel

@{
	ViewData["Title"] = "Lab 1";
}

<div class="container">
	<h3>Lab 1</h3>
	<form method="post" asp-action="Lab1">
		<div class="form-group mb-3">
			<label asp-for="P1" class="form-label"></label>
			<input asp-for="P1" class="form-control" />			
		</div>
		<div class="form-group mb-3">
			<label asp-for="P2" class="form-label"></label>
			<input asp-for="P2" class="form-control" />
		</div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

	@if (ViewBag.Result != null)
	{
		<h6 class="mt-3">@ViewBag.Result</h6>
	}
</div>
