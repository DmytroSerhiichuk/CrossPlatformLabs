@model List<Lab_5.DTO.CustomerDTO>

@{
	ViewData["Title"] = "Customers";
}

<h2>Customers - Список</h2>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Details</th>
			<th>Gender</th>
			<th>Email</th>
			<th>Phone</th>
			<th>Address Line 1</th>
			<th>Address Line 2</th>
			<th>Address Line 3</th>
			<th>Town</th>
			<th>County</th>
			<th>Country</th>
			<th>Bookings Count</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td><a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="GetCustomer" asp-route-id="@item.Id">@item.Id</a></td>
				<td><a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="GetCustomer" asp-route-id="@item.Id">@item.Name</a></td>
				<td><a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="GetCustomer" asp-route-id="@item.Id">@item.Details</a></td>
				<td><a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="GetCustomer" asp-route-id="@item.Id">@item.Gender</a></td>
				<td><a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="GetCustomer" asp-route-id="@item.Id">@item.Email</a></td>
				<td><a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="GetCustomer" asp-route-id="@item.Id">@item.Phone</a></td>
				<td><a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="GetCustomer" asp-route-id="@item.Id">@item.AddressLine1</a></td>
				<td><a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="GetCustomer" asp-route-id="@item.Id">@item.AddressLine2</a></td>
				<td><a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="GetCustomer" asp-route-id="@item.Id">@item.AddressLine3</a></td>
				<td><a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="GetCustomer" asp-route-id="@item.Id">@item.Town</a></td>
				<td><a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="GetCustomer" asp-route-id="@item.Id">@item.County</a></td>
				<td><a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="GetCustomer" asp-route-id="@item.Id">@item.Country</a></td>
				<td><a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="GetCustomer" asp-route-id="@item.Id">@item.BookingCount</a></td>
			</tr>
		}
	</tbody>
</table>
