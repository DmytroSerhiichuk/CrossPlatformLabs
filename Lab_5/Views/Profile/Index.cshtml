@{
	ViewData["Title"] = "Profile";
}

<div class="container">
	<div class="container mb-3">
		<h1 class="display-4 pb-3">Профіль</h1>
		<img src="@User.FindFirst("Picture")?.Value" width="100" />
		<p>UserName - @User.FindFirst("User Name")?.Value</p>
		<p>FullName - @User.FindFirst("Full Name")?.Value</p>
		<p>Email - @User.FindFirst("Email")?.Value</p>
		<p>Phone - @User.FindFirst("Phone")?.Value</p>

		<form asp-controller="Account" asp-action="Logout" method="post">
			<button type="submit" class="btn btn-primary">Log Out</button>
		</form>
	</div>

	<h5>Оберіть лабораторно роботу:</h5>
	<ul class="navbar-nav">
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="" asp-controller="LabLib" asp-action="Lab1">Lab 1</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="" asp-controller="LabLib" asp-action="Lab2">Lab 2</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="" asp-controller="LabLib" asp-action="Lab3">Lab 3</a>
		</li>
	</ul>

	<h5>База даних:</h5>
	<ul class="navbar-nav">
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="" asp-controller="Db" asp-action="Bookings">Bookings - List (Центральна таблиця)</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="" asp-controller="Db" asp-action="Models">Models - List</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="" asp-controller="Db" asp-action="BookingStatuses">Booking Statuses - List</a>
		</li>
	</ul>
</div>
